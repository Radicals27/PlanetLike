<h1>My Inbox</h1>


        <h1 class="panel-heading">All Conversations:</h1>
        <div class="panel-body">
        <div class="item">
        <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
            <% recipient = User.find(conversation.sender_id) %>
        <% end %>

        <% puts "Profile.picture: #{Profile.find(2).picture}" %>
        
        <h3><%= link_to image_tag(Profile.find_by(user_id: recipient.id).picture, width: 200), conversation_messages_path(conversation)%></h3>
        
        <% end %>
        <% end %>
        </div>
