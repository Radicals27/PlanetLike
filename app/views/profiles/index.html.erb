<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Age</th>
      <th>Orientation</th>
      <th>About me</th>
      <th>Work education</th>
      <th>Location</th>
      <th>Height</th>
      <th>Health</th>
      <th>Vices</th>
      <th>Pets</th>
      <th>Children</th>
      <th>Religion</th>
      <th>Politics</th>
      <th>Starsign</th>
      <th>Looking for</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
      <% if profile.picture.attached? %>
        <td><%= link_to image_tag(profile.picture, width: 50), profile%></td>
      <% else %>
        <td>You need to upload a picture!</td>
      <% end %>
        <td><%= profile.name %></td>
        <td><%= profile.sex %></td>
        <td><%= profile.age %></td>
        <td><%= profile.orientation %></td>
        <td><%= profile.about_me %></td>
        <td><%= profile.work_education %></td>
        <td><%= profile.location %></td>
        <td><%= profile.height %></td>
        <td><%= profile.health %></td>
        <td><%= profile.vices %></td>
        <td><%= profile.pets %></td>
        <td><%= profile.children %></td>
        <td><%= profile.religion %></td>
        <td><%= profile.politics %></td>
        <td><%= profile.starsign %></td>
        <td><%= profile.looking_for %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
