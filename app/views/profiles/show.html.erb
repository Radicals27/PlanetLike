<% if @profile.user_id.to_s != current_user.id.to_s %>
    <div class="item">
    <% contact_link = "Contact " + Profile.find_by(user_id: @profile.user_id).name.to_s%>
    <h3>
    <%= link_to contact_link, conversations_path(sender_id: current_user.id, recipient_id: User.find(@profile.user_id).id), method: "post",
    style: 'color:#FFFFFF;font-size:1em;', class: "btn btn-primary btn-lg"   %>
    
    </h3>
    </div>
<% end %>
